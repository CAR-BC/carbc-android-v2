<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <Spinner
                android:id="@+id/vehicle_number"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/button_bg_rounded_done"
                android:gravity="center"
                android:textAlignment="center" />


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:layout_marginBottom="15dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="Engine Number"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textAlignment="textEnd"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="20dp"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/search_engine_no_txt"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:textSize="17dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="Chassis Number"
                        android:textAlignment="textEnd"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="20dp"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/search_class_txt"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:textSize="17dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="Make"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:textSize="20dp"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="20dp"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/search_make_txt"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:textSize="17dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="Model"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:textSize="20dp"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="20dp"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/search_model_txt"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:textSize="17dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="Rating"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="20dp"
                        android:padding="5dp"/>

                    <TextView
                        android:id="@+id/search_rating_txt"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:textSize="17dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"/>

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/vehicle_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transactions"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp" />

        <ListView
            android:id="@+id/info_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp" />
    </LinearLayout>
</FrameLayout>