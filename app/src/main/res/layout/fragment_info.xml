<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp">

        <Spinner
            android:id="@+id/vehicle_number"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorGreenCell" />

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/vehicle_class"
            android:hint="car"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Owner "
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/search_owner_txt"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="20dp"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Registration No "
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/search_reg_no_txt"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="20dp"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Type "
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/search_type_txt"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="20dp"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Model "
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/search_model_txt"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="20dp"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Fuel Type "
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/search_fuel_type_txt"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="20dp"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Capacity "
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/search_capacity_txt"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="20dp"
                android:layout_margin="5dp"/>

        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/info_list"
        android:layout_margin = "15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
</FrameLayout>