<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsureActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_gravity="left"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_baseline_arrow_back_black_24dp"/>

        <TextView
            android:layout_marginLeft="15dp"
            android:text="Insure"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="@null"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/vehicle_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vehicle Number"
        android:layout_gravity="center"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insurance Company"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/insure_insurance_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company name"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insurance Number"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/insure_insurance_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="insurance No"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insurance Info"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/insure_insurance_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Info"
                android:textSize="20dp"/>
        </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginLeft="100dp"
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:gravity="center"
            android:layout_gravity="left" />

        <Button
            android:id="@+id/done_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:gravity="center"
            android:layout_gravity="right" />
    </LinearLayout>

    </LinearLayout>

</ScrollView>