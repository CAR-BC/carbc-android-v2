<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="11"
            android:layout_height="?attr/actionBarSize">

            <EditText
                android:layout_marginLeft="15dp"
                android:id="@+id/search_vehicle_vid"
                android:hint="Registration Number"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="48dp"
                android:textSize="24sp"
                android:background="@null"/>

            <ImageView
                android:id="@+id/search_btn"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search_black_24dp" />


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:layout_marginBottom="15dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Engine Number"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textAlignment="textEnd"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="20dp"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/search_engine_no_txt"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:textSize="17dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Chassis Number"
                    android:textAlignment="textEnd"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="20dp"
                    android:layout_margin="5dp"/>
                <TextView
                    android:id="@+id/search_class_txt"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:textSize="17dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Make"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textSize="20dp"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="20dp"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/search_make_txt"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:textSize="17dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Model"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textSize="20dp"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="20dp"
                    android:layout_margin="5dp"/>
                <TextView
                    android:id="@+id/search_model_txt"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:textSize="17dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="20dp"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/search_rating_txt"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:textSize="17dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"/>

            </LinearLayout>

        </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/req_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:text="Request more info"/>

        <ListView
            android:id="@+id/info_list"
            android:layout_margin = "15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>